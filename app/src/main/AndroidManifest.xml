            android:name="MultipleChoice"
            android:label="@string/MultipleChoice" >
        </activity>
        <activity
            android:name="WordListsSimple"
            android:label="@string/Select2Train" >
        </activity>
        <activity
            android:name="EditWordRecord"
            android:label="@string/EditWords" >
        </activity>
        <activity
            android:name="EditList"
            android:label="EditList" >
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/Help" >
        </activity>
        <activity
            android:name="DictCCList"
            android:label="DictCCList" >
        </activity>
        <activity
            android:name="DictCCWords"
            android:label="DictCCWords" >
        </activity>
    </application>

     <uses-sdk
      android:minSdkVersion="7"
      android:targetSdkVersion="19" />
    <supports-screens
        android:anyDensity="false"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.VIBRATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

</manifest>